<%- include('../navbar') %>
<title>Upload Photo</title>
<div style="padding-top: 3%">
  <div class="card col-md-5 m-auto shadow">
    <p></p>
    <%- include('../partials/messages') %>
    <form
      class="text-center p-5"
      enctype="multipart/form-data"
      method="POST"
      action=""
    >
      <p class="h4 mb-4">Upload Photo</p>

      <p>Please fill some detail about Photo and then Upload</p>

      <p>
        <a href="" target="_blank">See the usage</a>
      </p>

      <!-- Title -->
      <input
        type="text"
        name="title"
        class="form-control mb-4"
        placeholder="Title"
        value="<%= typeof title != 'undefined' ? title : '' %>"
        required
      />

      <input type="file" class="custom-file mb-4" name="photo" required />

      <!-- Discription -->
      <div class="form-group">
        <textarea
          class="form-control mb-4"
          type="text"
          rows="3"
          name="discription"
          placeholder="Discription"
          value="<%= typeof discription != 'undefined' ? discription : '' %>"
          required
        ></textarea>
      </div>

      <!-- Caption -->
      <input
        type="text"
        name="caption"
        class="form-control mb-4"
        placeholder="Caption"
        value="<%= typeof caption != 'undefined' ? caption : '' %>"
        required
      />

      <!-- Upload button -->
      <button class="btn btn-info btn-block" type="submit">Upload</button>
    </form>
    <!-- Default form subscription -->
  </div>
</div>
<%- include('../footer') %>
