<%- include('../navbar') %>
<title>Photo</title>

<!-- <div class="m-4 shadow center" style="width: auto;"> -->
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-7 m-auto">
      <br />
      <div class="card shadow" style="width: auto">
        <a href="../<%= photo.path %>" role="button"
          ><img
            class="img-fluid img card-img-top img-thumbnail"
            src="../<%= photo.path %>"
            alt="<%= photo.caption %>"
        /></a>
        <div class="card-body">
          <h5 class="card-title"><%= photo.title %></h5>
          <p class="card-text"><%= photo.discription %></p>
          <a href="../download/<%= photo._id %>" class="btn btn-primary"
            >Download</a
          >
          <p class="card-text">
            <small class="text-muted">By <%= photo._user.name %></small>
            <small class="text-muted">In <%= photo._type.name %></small>
          </p>
        </div>
        <div class="card-footer">
          <small class="text-muted"
            ><%= moment(photo.createdAt).fromNow() %></small
          >
        </div>
      </div>
      <br />
    </div>
  </div>
</div>
<!-- </div> -->

<%- include('../footer') %>
